{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "strict": true,
      "declaration": true
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "*.stories.tsx", "./src/stories"]
  }